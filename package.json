{
  "name": "unifique-api",
  "version": "1.0.0",
  "description": "API for Unifique using Fastify, Sequelize, and TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,tsx --exec tsx src/index.ts",
    "build": "swc src -d dist --source-maps",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "db:migrate": "tsx --experimental-specifier-resolution=node node_modules/.bin/sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guizordan/unifique-api.git"
  },
  "keywords": [],
  "author": "guilhermezordan@outlook.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guizordan/unifique-api/issues"
  },
  "homepage": "https://github.com/guizordan/unifique-api#readme",
  "dependencies": {
    "@azure/msal-node": "^3.5.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/passport": "^3.0.2",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@sequelize/core": "^7.0.0-alpha.42",
    "@sequelize/mssql": "^7.0.0-alpha.46",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "fastify": "^5.2.2",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.5.0",
    "mysql2": "^3.14.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "puppeteer": "^24.6.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.0",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prompt-sync": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "type": "module"
}
